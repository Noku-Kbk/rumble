<h1>Comments#index,</h1>
<p>Find me in app/views/comments/index.html.erb</p>
<h2>Comments</h2>

<ul>
  <% @comments.each do |comment| %>
    <li>
      <strong><%= comment.user.name %>:</strong> <%= comment.content %>
      <%= link_to "Delete", pothole_comment_path(@pothole, comment), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
    </li>
  <% end %>
</ul>
