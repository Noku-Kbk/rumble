<h1 class="mb-4">Report a New Pothole</h1>

<div class="card">
  <div class="card-body">

<%= simple_form_for(@pothole) do |f| %>
  <%= f.input :address %>
  <%= f.input :size %>
  <%= f.input :description %>
  <%= f.input :status, collection: ['Reported', 'In progress', 'Done'] %>
  <%= f.submit %>
<% end %>
