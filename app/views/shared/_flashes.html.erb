<% if notice %>
  <div class="bg-[#F5E6C5] text-[#3F422E] border border-[#9F886F] rounded-md shadow-md p-3 m-2 flex items-center justify-between" role="alert">
    <span><%= notice %></span>
    <button type="button" class="text-[#3F422E] hover:text-[#D78B30] transition-colors" data-bs-dismiss="alert" aria-label="Close">
      <i class="fa-solid fa-xmark"></i>
    </button>
  </div>
<% end %>

