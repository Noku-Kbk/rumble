<footer class="fixed bottom-0 left-0 right-0 bg-green-800 text-green-100 pb-2 pt-1 shadow-lg border-t border-green-600/40 mt-16">
  <div class="max-w-screen-lg mx-auto flex justify-around items-center">

    <!-- Home -->
    <%= link_to root_path, class: "flex flex-col items-center text-orange-100 hover:text-stone-400 transition-colors" do %>
      <i class="fa-solid fa-house text-xl"></i>
      <span class="text-xs mt-0.5">Home</span>
    <% end %>

    <!-- Report -->
    <%= link_to new_pothole_path, class: "flex flex-col items-center text-orange-100 hover:text-stone-400 transition-colors" do %>
      <i class="fa-solid fa-triangle-exclamation text-xl"></i>
      <span class="text-xs mt-0.5">Report</span>
    <% end %>

    <!-- Potholes -->
    <%= link_to potholes_path, class: "flex flex-col items-center text-orange-100 hover:text-stone-400 transition-colors" do %>
      <i class="fa-solid fa-list text-xl"></i>
      <span class="text-xs mt-0.5">Potholes</span>
    <% end %>

  </div>
</footer>
